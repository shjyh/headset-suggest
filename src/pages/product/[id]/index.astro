---
import Layout from "@/pages/_layout.astro";
import { go } from "@/proxy/backend";
import ImageSwitch from "./_ImageSwitch.vue";
import { ElText } from "element-plus";
import CartAndBuy from "./_CartAndBuy.vue";
import Content from "./_Content.vue";

const id = Astro.params.id;

const { detail } = await go(Astro.request, "POST", "/headphone/detail/" + id);
---

<Layout title="">
    <div class="detail">
        <div class="box">
            <ImageSwitch images={detail.imageList} client:load />
            <div class="info">
                <ElText tag="h2" class="name" line-clamp="2" >{ detail.name }</ElText>
                <ElText tag="div" class="price" type="danger">Â¥ <span class="price-value">1999</span></ElText>
                <CartAndBuy detail={detail} isLogin={Astro.locals.isLogin}  client:load />
            </div>
        </div>
        <Content detail={detail} client:load />
    </div>
</Layout>

<style>
    .detail {
        background: white;
        border-radius: 24px;
        margin: 24px 0;
        padding: 18px;
    }

    .box {
        display: flex;
        align-items: flex-start;
    }
    .info {
        margin-left: 24px;
        flex: 1;
    }
    .name {
        font-size: 2em;
        line-height: 1.3;
        font-weight: bold;
    }

    .price {
        margin-top: 24px;
    }

    .price-value {
        font-size: 1.5em;
    }
</style>